<resources>

  <style name="AppTheme"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">@color/colorSecondaryText</item>

    <item name="android:textColorPrimary">@android:color/black</item>

  </style>

  <!-- Toolbar -->
  <style name="ToolbarBase">
    <item name="android:minHeight">?actionBarSize</item>
    <item name="android:background">?colorPrimary</item>
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="android:theme">@style/ToolbarTheme</item>
  </style>

  <style name="Toolbar"
      parent="ToolbarBase">
  </style>

  <style name="ToolbarTheme">
    <item name="colorControlNormal">@android:color/white</item>
    <item name="android:textColorPrimary">@android:color/white</item>
  </style>

  <style name="Toolbar.TabLayout" parent="ToolbarBase">
    <item name="tabIndicatorColor">?attr/colorPrimaryDark</item>
  </style>

  <!-- Progress loading spinner -->
  <style name="AppTheme.ProgressBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:visibility">visible</item>
  </style>
  <!-- Film Card View -->
  <style name="PreviewCard.Title" parent="TextAppearance.AppCompat.Headline">
  </style>
  <style name="PreviewCard.Episode" parent="TextAppearance.AppCompat.Body1">
  </style>
  <style name="PreviewCard.Director" parent="TextAppearance.AppCompat.Body2">
  </style>
  <style name="PreviewCard.ReleaseDate" parent="TextAppearance.AppCompat.Body2">
  </style>

</resources>
